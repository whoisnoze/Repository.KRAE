            <control type="image" id="10013">
                <posy>100</posy>
                <posx>5%</posx>
                <width>200</width>
                <height>200</height>
                <texture background="true"></texture>
            </control>
            <control type="textbox" id="10014">
                <posy>100</posy>
                <posx>260</posx>
                <width>600</width>
                <height>190</height>
                <wrapmultiline>True</wrapmultiline>
                <align>left</align>
                <aligny>center</aligny>
                <autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
            </control>
            <control type="group">
				<centerleft>50%</centerleft>
				<top>310</top>
				<height>80</height>
				<width>800</width>
				<control type="grouplist" id="9000">
					<orientation>horizontal</orientation>
					<width>800</width>
					<align>center</align>
					<top>0</top>	
					<itemgap>50</itemgap>
                    <control type="button" id="10015">
						<top></top>
						<width>180</width>
						<height>50</height>
						<label>Aceptar</label>
						<font>font25_title</font>
						<textoffsetx>20</textoffsetx>
						<textoffsety>20</textoffsety>
						<onclick></onclick>
						<wrapmultiline>false</wrapmultiline>
						<align>center</align>
						<aligny>center</aligny>
						<texturefocus colordiffuse="Ffd414fc">DialogImage/dialogconfirm.png</texturefocus>
						<texturenofocus colordiffuse="E62D2E2E">DialogImage/dialogconfirm.png</texturenofocus>
						<visible>true</visible>
					</control>

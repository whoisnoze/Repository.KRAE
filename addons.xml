            <dir>
                <info>https://raw.githubusercontent.com/whoisnoze/Repository.KRAE/main/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/whoisnoze/Repository.KRAE/main/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/whoisnoze/Repository.KRAE/main/</datadir>
            </dir>
        </extension>

        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>

    <addon id="plugin.video.aceschannel" name="AcesChannel" version="1.0.2" provider-name="Whoisnoze">
